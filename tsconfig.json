{
	"extends": "@nextnode/standards/typescript/library",
	"compilerOptions": {
		"lib": ["ES2023", "DOM", "WebWorker"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["node", "vitest/globals"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"types/**/*.ts",
		"*.config.*",
		"vitest.config.ts"
	],
	"exclude": ["node_modules", "dist"]
}
